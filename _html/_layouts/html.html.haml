!!! 5
%html{lang: "{{ page.language }}"}<>
  %head<>
    %meta{charset: "utf-8"}<>
    %title<> {% if page.language == 'zh' %}{{ site.title.zh }}{% elsif page.language == 'ja' %}{{ site.title.ja }}{% else %}{{ site.title.en }}{% endif %}{% if page.title %}: {{ page.title }}{% endif %}
    %link{rel: "stylesheet", href: "{{ site.static_url }}/css/ruyi.css?{{ site.time | date: '%s' }}", type: "text/css"}<>
    %link{rel: "shortcut icon", href: "{{ site.static_url }}/favicon.ico"}<>
    %link{rel: "alternate", href: "{{ site.feed.en }}", type: "application/atom+xml", title: "{{ site.title.en }}"}<>
    %link{rel: "alternate", href: "{{ site.feed.zh }}", type: "application/atom+xml", title: "{{ site.title.zh }}"}<>
    %link{rel: "alternate", href: "{{ site.feed.ja }}", type: "application/atom+xml", title: "{{ site.title.ja }}"}<>
    %link{rel: "canonical", href: "{{ site.url }}{{ page.url }}"}<>
    %meta{name: "description", content: "{% if page.subtitle %}{{ page.subtitle }}{% else %}{% if page.language == 'zh' %}{{ site.subtitle.zh }}{% elsif page.language == 'ja' %}{{ site.subtitle.ja }}{% else %}{{ site.subtitle.en }}{% endif %}{% endif %}"}<>
    %meta{name: "keywords", content: "{{ site.keywords }}"}<>
    %meta{name: "author", content: "{{ site.author.name }}"}<>
    %meta{name: "viewport", content: "user-scalable=0, initial-scale=1.0"}<>
  %body<>
    = "{{ content }}"
    = "{% include settings.html %}"
    %script{src: "{{ site.static_url }}/js/ruyi.js?{{ site.time | date: '%s' }}", type: "text/javascript", defer: true}<>
